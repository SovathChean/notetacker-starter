				{
					"name": "Register",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{test_email}}\",\n    \"username\": \"{{test_username}}\",\n    \"password\": \"{{test_password}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register"]
						},
						"description": "Register a new user account."
					},
					"response": [],
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Registration successful', function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
									"});",
									"",
									"pm.test('Response contains tokens', function () {",
									"    const jsonData = pm.response.json();",
									"    ",
									"    if (jsonData.accessToken || jsonData.access_token || jsonData.token) {",
									"        const accessToken = jsonData.accessToken || jsonData.access_token || jsonData.token;",
									"        pm.collectionVariables.set('access_token', accessToken);",
									"        console.log('Access token saved');",
									"    }",
									"    ",
									"    if (jsonData.refreshToken || jsonData.refresh_token) {",
									"        const refreshToken = jsonData.refreshToken || jsonData.refresh_token;",
									"        pm.collectionVariables.set('refresh_token', refreshToken);",
									"        console.log('Refresh token saved');",
									"    }",
									"    ",
									"    if (jsonData.user && jsonData.user.id) {",
									"        pm.collectionVariables.set('user_id', jsonData.user.id);",
									"        console.log('User ID saved:', jsonData.user.id);",
									"    } else if (jsonData.userId || jsonData.user_id) {",
									"        pm.collectionVariables.set('user_id', jsonData.userId || jsonData.user_id);",
									"        console.log('User ID saved');",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
